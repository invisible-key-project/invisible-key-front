<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fragmentCotainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:background="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:itemTextAppearanceActiveBoldEnabled="true"
        app:itemTextAppearanceActive="@font/pretendard_medium"
        app:itemTextAppearanceInactive="@font/pretendard_medium"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/color_item_grey"
        app:itemTextColor="@color/color_item_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:theme="@style/NoAnimationBottomNavigationView" />

</androidx.constraintlayout.widget.ConstraintLayout>