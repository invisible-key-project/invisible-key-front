<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- 사이즈가 고정된 View -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:background="@drawable/style_embed_dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_dl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="ID : "
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_dl_id_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="userid"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@+id/tv_dl_id"
                app:layout_constraintTop_toTopOf="@+id/tv_dl_id" />

            <TextView
                android:id="@+id/tv_dl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="닉네임 : "
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dl_id" />

            <TextView
                android:id="@+id/tv_dl_name_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="진실을 찾아서"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dl_name"
                app:layout_constraintStart_toEndOf="@+id/tv_dl_name"
                app:layout_constraintTop_toTopOf="@+id/tv_dl_name" />

            <TextView
                android:id="@+id/tv_dl_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/pretendard_medium"
                android:text="촬영한 날짜 : "
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_dl_name" />

            <TextView
                android:id="@+id/tv_dl_date_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="24.04.24"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dl_date"
                app:layout_constraintStart_toEndOf="@+id/tv_dl_date"
                app:layout_constraintTop_toTopOf="@+id/tv_dl_date" />


            <Button
                android:id="@+id/btn_dl_confirm"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="확인"
                android:textSize="11dp"
                android:fontFamily="@font/pretendard_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>