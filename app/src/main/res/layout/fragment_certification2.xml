<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CertificationFragment2">

    <TextView
        android:id="@+id/cert2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="워터마크 추출 결과"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/cert2_result_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cert2_title_tv"
        android:layout_marginTop="100dp" />
    <TextView
        android:id="@+id/cert2_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="워터마크 데이터"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_result_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp" />
    <TextView
        android:id="@+id/cert2_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름: 홍길동"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_title2_tv"
        app:layout_constraintStart_toStartOf="@id/cert2_title2_tv"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/cert2_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임: HongGildong"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_name_tv"
        app:layout_constraintStart_toStartOf="@id/cert2_title2_tv"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/cert2_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삽입 날짜: 2000.00.00"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_id_tv"
        app:layout_constraintStart_toStartOf="@id/cert2_title2_tv"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/cert2_title3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 정보"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_date_tv"
        app:layout_constraintStart_toStartOf="@id/cert2_title2_tv"
        android:layout_marginTop="30dp" />
    <TextView
        android:id="@+id/cert2_image_result_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이미지 훼손율: 10.00%"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/cert2_title3_tv"
        app:layout_constraintStart_toStartOf="@id/cert2_title2_tv"
        android:layout_marginTop="12dp"/>
    <Button
        android:id="@+id/cert2_end_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cert2_image_result_tv"
        android:text="홈으로 돌아가기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>