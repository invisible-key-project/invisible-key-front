<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.example.transparentkey_aos.EmbedWatemarkSelectFragment"
    >

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_qr"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="워터마크 종류 선택"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_qr"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="280dp"
        android:background="@drawable/style_main_btn"
        android:fontFamily="@font/pretendard_bold"
        android:text="QR 코드"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@drawable/style_main_btn"
        android:fontFamily="@font/pretendard_bold"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="이미지\n(64x64 권장)"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_qr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_qr"
        app:layout_constraintTop_toTopOf="@+id/btn_qr" />
</androidx.constraintlayout.widget.ConstraintLayout>